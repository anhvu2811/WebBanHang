@model IEnumerable<WebBanHang.Models.NhomHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh mục nhóm hàng</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã nhóm
        </th>
        <th>
            Tên nhóm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaNhom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNhom)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaNhom }) |
                @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaNhom }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaNhom })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Quay trở lại", "Index", "Admin")
