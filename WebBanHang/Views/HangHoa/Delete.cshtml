@model WebBanHang.Models.HangHoa

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Bạn có chắc chắn muốn xóa?</h3>
<div>
    <h4>HangHoa</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã hàng hóa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaHH)
        </dd>

        <dt>
            Tên hàng hóa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenHH)
        </dd>

        <dt>
            Hình ảnh:
        </dt>

        <dd>
            <img src="~/Images/@Model.HinhAnh" style="width:70px; height:100px;" />
        </dd>

        <dt>
            Giá:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Gia)
        </dd>

        <dt>
            Đơn vị tính:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DonViTinh)
        </dd>

        <dt>
            Nơi sản xuất:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoiSX)
        </dd>

        <dt>
            Nhóm hàng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NhomHang.TenNhom)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Quay trở lại", "Index")
        </div>
    }
</div>
